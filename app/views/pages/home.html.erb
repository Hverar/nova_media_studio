<!-- Hero Banner with Navigation -->
<div class="hero-banner">
  <%= image_tag "banner.jpg", alt: "Banner" %>

  <div class="hero-overlay">
    <!-- Logo Top Left -->
    <div class="hero-logo">
      <%= image_tag "logo_white.png", alt: "Logo", class: "site-logo" %>
    </div>

    <!-- Navigation -->
    <div class="hero-nav">
      <%= link_to t("nav.home"), root_path, class: ("nav-link #{current_page?(root_path) ? 'active' : ''}") %>
      <%= link_to t("nav.services"), services_path, class: ("nav-link #{current_page?(services_path) ? 'active' : ''}") %>
      <%= link_to t("nav.portfolio"), portfolio_path, class: ("nav-link #{current_page?(portfolio_path) ? 'active' : ''}") %>
      <%= link_to t("nav.consultation"), join_us_path, class: ("nav-link #{current_page?(join_us_path) ? 'active' : ''}") %>
    </div>

    <!-- Centered Text -->
    <div class="hero-text">
      <h1><%= t("hero.title") %></h1>
      <p><%= t("hero.subtitle") %></p>
      <a href="#" id="openModalBtn2" class="cta-button"><%= t("hero.cta") %></a>
    </div>
  </div>
</div>

<%= render 'shared/consultation_modal' %>

<!-- Web Service Box -->
<div class="web-service-box">
  <div class="web-service-image">
    <img src="/assets/eee.jpg" alt="Web Design Sketches">
    <div class="web-service-tag"><%= t("web_service.tagline") %></div>
  </div>

  <div class="web-service-steps">
    <h3><%= t("steps.title") %></h3>
    <div class="step-grid">
      <div class="step-item">
        <i class="fa-solid fa-dice-one step-icon"></i>
        <div>
          <strong><%= t("steps.one.title") %></strong>
          <p><%= t("steps.one.desc") %></p>
        </div>
      </div>
      <div class="step-item">
        <i class="fa-solid fa-dice-two step-icon"></i>
        <div>
          <strong><%= t("steps.two.title") %></strong>
          <p><%= t("steps.two.desc") %></p>
        </div>
      </div>
      <div class="step-item">
        <i class="fa-solid fa-dice-three step-icon"></i>
        <div>
          <strong><%= t("steps.three.title") %></strong>
          <p><%= t("steps.three.desc") %></p>
        </div>
      </div>
      <div class="step-item">
        <i class="fa-solid fa-dice-four step-icon"></i>
        <div>
          <strong><%= t("steps.four.title") %></strong>
          <p><%= t("steps.four.desc") %></p>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- About Section -->
<hr style="width: 100%; max-width: 90%; margin: 40px auto 20px auto; border: none; border-top: 1px solid #ccc;">
<div class="about-section" style="padding: 30px 20px 60px; text-align: center;">
  <h2 style="font-size: 2.75rem; font-weight: 800; color: #1a1a1a;"><%= t("about.title") %></h2>
  <div style="margin: 16px auto 24px; width: 120px; height: 3px; background-color: #1a1a1a; border-radius: 2px;"></div>

  <p style="font-size: 1.3rem; font-weight: 600; margin-bottom: 12px;"><%= t("about.tagline") %></p>
  <p style="max-width: 850px; margin: 0 auto; font-size: 1.15rem; font-weight: 500; line-height: 1.8;">
    <%= t("about.description") %>
  </p>
</div>

