<!-- Hero Banner with Navigation -->
<div class="hero-banner">
  <%= image_tag "banner.jpg", alt: "Banner" %>

  <div class="hero-overlay">

    <div class="hero-logo">
      <%= image_tag "logo_white.png", alt: "Logo", class: "site-logo" %>
    </div>
    <!-- Navigation -->
    <div class="hero-nav">
      <%= link_to t("nav.home"), root_path, class: ("nav-link #{current_page?(root_path) ? 'active' : ''}") %>
      <%= link_to t("nav.services"), services_path, class: ("nav-link #{current_page?(services_path) ? 'active' : ''}") %>
      <%= link_to t("nav.portfolio"), portfolio_path, class: ("nav-link #{current_page?(portfolio_path) ? 'active' : ''}") %>
      <%= link_to t("nav.consultation"), join_us_path, class: ("nav-link #{current_page?(join_us_path) ? 'active' : ''}") %>
    </div>

    <!-- Centered Text -->
    <div class="hero-text">
      <h1><%= t("hero_services.title") %></h1>
      <p><%= t("hero_services.subtitle") %></p>
    </div>
  </div>
</div>

<!-- Website Services Highlight -->
<section class="highlight-section">
  <p class="highlight-text-service" style="font-size: 1.5rem;">
    <%= t("services.highlight") %>
  </p>
</section>

<!-- Website Creation Steps -->
<div class="creation-steps">
  <!-- Step 1 -->
  <div class="step-card" data-aos="fade-right">
    <div class="step-text">
      <h3><%= t("services.steps.step1.title") %></h3>
      <p><%= t("services.steps.step1.desc") %></p>
    </div>
    <div class="step-image">
      <%= image_tag "design.jpg", alt: "Design phase" %>
    </div>
  </div>

  <!-- Step 2 -->
  <div class="step-card" data-aos="fade-left">
    <div class="step-text">
      <h3><%= t("services.steps.step2.title") %></h3>
      <p><%= t("services.steps.step2.desc") %></p>
    </div>
    <div class="step-image">
      <%= image_tag "development.jpg", alt: "Development phase" %>
    </div>
  </div>

  <!-- Step 3 -->
  <div class="step-card" data-aos="fade-right">
    <div class="step-text">
      <h3><%= t("services.steps.step3.title") %></h3>
      <p><%= t("services.steps.step3.desc") %></p>
    </div>
    <div class="step-image">
      <%= image_tag "hosting.jpg", alt: "Hosting phase" %>
    </div>
  </div>
</div>

<div class="cta-box">
  <h2><%= t("services.cta.title") %></h2>
  <a href="#" id="openModalBtn" class="cta-button"><%= t("services.cta.button") %></a>
</div>

<!-- Modal -->
<%= render 'shared/consultation_modal' %>

