<!-- HERO BANNER -->
<div class="hero-banner">
  <%= image_tag "banner.jpg", alt: "Banner" %>

  <div class="hero-overlay">

    <div class="hero-logo">
      <%= image_tag "logo_white.png", alt: "Logo", class: "site-logo" %>
    </div>
    <!-- Navigation -->
    <div class="hero-nav">
      <%= link_to t("nav.home"), url_for(:root), class: ("nav-link #{current_page?(root_path) ? 'active' : ''}") %>
      <%= link_to t("nav.services"), url_for(:services), class: ("nav-link #{current_page?(services_path) ? 'active' : ''}") %>
      <%= link_to t("nav.portfolio"), url_for(:portfolio), class: ("nav-link #{current_page?(portfolio_path) ? 'active' : ''}") %>
      <%= link_to t("nav.consultation"), join_us_path, class: ("nav-link #{current_page?(join_us_path) ? 'active' : ''}") %>
    </div>

    <!-- Centered Text -->
    <div class="hero-text" data-aos="fade-left">
      <h1><%= t("portfolio.hero.title") %></h1>
      <p><%= t("portfolio.hero.subtitle") %></p>
    </div>
  </div>
</div>

<!-- MARKET GALLERY -->
<section class="market-gallery">
  <div class="market-gallery__header" data-aos="fade-right">
    <h2><%= t("portfolio.gallery.heading_html") %></h2>
  </div>

  <div class="three-card-row">
    <!-- Card 1: Share-a-meal -->
    <div class="gallery-card" data-aos="fade-right" data-aos-delay="200">
      <figure class="wp-caption">
        <%= link_to image_tag("shareameal_logo.png", alt: "Share-a-meal", class: "gallery-img"), "https://www.shareameal.me/", target: "_blank", rel: "noopener" %>
        <figcaption class="wp-caption-text"><%= t("portfolio.projects.shareameal") %></figcaption>
      </figure>
    </div>

    <!-- Card 2: Semper -->
    <div class="gallery-card middle-card taller-card" data-aos="fade-right" data-aos-delay="300">
      <figure class="wp-caption">
        <%= link_to image_tag("semper.png", alt: "Semper", class: "gallery-img"), "https://semper.ca/", target: "_blank", rel: "noopener" %>
        <figcaption class="wp-caption-text"><%= t("portfolio.projects.semper") %></figcaption>
      </figure>
    </div>

    <!-- Card 3: Mangalatina -->
    <div class="gallery-card" data-aos="fade-right" data-aos-delay="400">
      <figure class="wp-caption">
        <%= link_to image_tag("mangalatina.png", alt: "Mangalatina", class: "gallery-img"), "https://www.mangalatina.com/", target: "_blank", rel: "noopener" %>
        <figcaption class="wp-caption-text"><%= t("portfolio.projects.mangalatina") %></figcaption>
      </figure>
    </div>
  </div>
</section>

<!-- Footer -->
