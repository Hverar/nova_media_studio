  <div class="footer-left">
    <a href="<%= root_path %>"><%= t("nav.home") %></a>
    <a href="<%= services_path %>"><%= t("nav.services") %></a>
    <a href="<%= portfolio_path %>"><%= t("nav.portfolio") %></a>
    <a href="<%= join_us_path %>"><%= t("nav.consultation") %></a>
  </div>

