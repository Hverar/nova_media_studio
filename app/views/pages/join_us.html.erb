<!-- Hero Banner with Navigation -->
<div class="hero-banner">
  <%= image_tag "banner.jpg", alt: "Banner" %>

  <div class="hero-overlay">

    <div class="hero-logo">
      <%= image_tag "logo_white.png", alt: "Logo", class: "site-logo" %>
    </div>
    <!-- Navigation -->
    <div class="hero-nav">
      <%= link_to t("nav.home"), root_path, class: ("nav-link #{current_page?(root_path) ? 'active' : ''}") %>
      <%= link_to t("nav.services"), services_path, class: ("nav-link #{current_page?(services_path) ? 'active' : ''}") %>
      <%= link_to t("nav.portfolio"), portfolio_path, class: ("nav-link #{current_page?(portfolio_path) ? 'active' : ''}") %>
      <%= link_to t("nav.consultation"), join_us_path, class: ("nav-link #{current_page?(join_us_path) ? 'active' : ''}") %>
    </div>

    <!-- Centered Text -->
    <div class="hero-text" data-aos="fade-left">
      <h1><%= t("consultation.hero.title") %></h1>
      <p><%= t("consultation.hero.subtitle") %></p>
    </div>
  </div>
</div>

<div class="contact-section">
  <div class="contact-header">
    <h2><%= t("consultation.form.heading") %></h2>
    <p class="contact-subtitle"><%= t("consultation.form.subtitle") %></p>
  </div>

  <div class="contact-form-wrapper container">
    <!-- LEFT SIDE: FORM -->
    <div class="contact-form">
      <%= form_with model: @consultation, url: consultations_path, local: true do |form| %>
        <%= form.label :first_name, t("consultation.form.first_name") %>
        <%= form.text_field :first_name, required: true %>

        <%= form.label :email, t("consultation.form.email") %>
        <%= form.email_field :email, required: true %>

        <%= form.label :phone, t("consultation.form.phone") %>
        <%= form.telephone_field :phone %>

        <%= form.label :project_description, t("consultation.form.description") %>
        <%= form.text_area :project_description, required: true %>

        <%= form.submit t("consultation.form.submit"), class: "btn-submit" %>
      <% end %>
    </div>

    <!-- RIGHT SIDE: CONTACT INFO -->
    <div class="contact-info">
      <div class="info-box black">
        <i class="bi bi-envelope-fill"></i>
        <p><%= t("consultation.contact.email_label") %></p>
        <strong>Henrique@novamediastudio.ca</strong>
      </div>
    </div>
  </div>
</div>

<!-- Footer -->
<footer class="footer">
  <div class="footer-left">
    <a href="<%= root_path %>"><%= t("nav.home") %></a>
    <a href="<%= services_path %>"><%= t("nav.services") %></a>
    <a href="<%= portfolio_path %>"><%= t("nav.portfolio") %></a>
    <a href="<%= join_us_path %>"><%= t("nav.consultation") %></a>
  </div>

  <div class="center-content">
    <div class="social-icons">
      <a href="https://www.linkedin.com/in/henrique-vera-ramirez-065845296/" target="_blank" class="linkedin-link">
        <i class="fa-brands fa-linkedin facebook-icon"></i>
      </a>
      <a href="https://www.facebook.com/profile.php?id=61578411996415" target="_blank" class="facebook-link">
        <i class="fa-brands fa-facebook facebook-icon"></i>
      </a>
      <a href="https://github.com/Hverar" target="_blank" class="github-link">
        <i class="fa-brands fa-github facebook-icon"></i>
      </a>
    </div>
    <span>Copyright Â© 2025 NovaMedia Studio</span>
  </div>

  <div class="footer-right">
    <span>Powered by NovaMedia Studio</span>
